<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create New Topic:</h3>

<div>
    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Blog Topic:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Comment:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <label for="project-funding">My Rating</label>
        <input class="form-input" type="number" id="project-funding" name="project-funding" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
<br>
<br>
<br>
  {{#if projects.length}}
  <div class="col-md-12 project-list">
    <h3>My Comments:</h3>

    {{#each projects as |project|}}
    <div class="row mb-6">
      <div class="col-md-6">
        <h4><a href="/project/{{project.id}}"> {{project.name}} </a></h4>
        <p>{{description}}</p>
      </div>
      <div class="col-md-6">
         <button class="btn btn-sm btn-info" data-id="{{project.id}}"> Update </button> 
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">Remove</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
</div>
<script src="./js/profile.js"></script>